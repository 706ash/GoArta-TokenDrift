{
  "openapi": "3.0.3",
  "info": {
    "title": "Travel & Community API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/itineraries/generate": {
      "post": {
        "summary": "Generate a travel itinerary",
        "description": "Generates a travel itinerary based on user preferences like interests, duration, and pace.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "interests": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["museums", "food", "nature"]
                  },
                  "duration_days": {
                    "type": "integer",
                    "example": 3
                  },
                  "pace": {
                    "type": "string",
                    "enum": ["relaxed", "moderate", "fast"],
                    "example": "moderate"
                  }
                },
                "required": ["interests", "duration_days", "pace"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated itinerary",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "itinerary_id": { "type": "string" },
                    "days": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "day": { "type": "integer" },
                          "activities": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "experience_id": { "type": "integer" },
                                "name": { "type": "string" },
                                "time_slot": { "type": "string" }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Invalid preferences or JSON body",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/community/posts": {
      "get": {
        "summary": "Get all community posts",
        "description": "Fetches a list of all community posts.",
        "responses": {
          "200": {
            "description": "A list of community posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 101 },
                      "author_id": { "type": "integer", "example": 42 },
                      "media_url": { "type": "string", "format": "uri", "example": "https://example.com/photo.jpg" },
                      "caption": { "type": "string", "example": "Had a great time hiking!" },
                      "created_at": { "type": "string", "format": "date-time", "example": "2025-08-12T12:34:56Z" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/social/posts": {
      "post": {
        "summary": "Create a community post",
        "description": "Creates a new community post with a media URL and caption. Requires Bearer token authentication.",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "media_url": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://example.com/photo.jpg"
                  },
                  "caption": {
                    "type": "string",
                    "example": "Enjoying the sunset at the beach!"
                  }
                },
                "required": ["media_url", "caption"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "example": 123 },
                    "author_id": { "type": "integer", "example": 42 },
                    "media_url": { "type": "string", "format": "uri" },
                    "caption": { "type": "string" },
                    "created_at": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Invalid JSON or post payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/events": {
      "get": {
        "summary": "Get all events or filter by category",
        "description": "Retrieves a list of all events, optionally filtered by category.",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "description": "Filter events by category (e.g., 'Traditional Festival', 'Cultural Fair')",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EventSummary"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/events/{id}": {
      "get": {
        "summary": "Get a particular event by ID",
        "description": "Retrieves details for a single event by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the event to retrieve",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of the event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventDetail"
                }
              }
            }
          },
          "404": {
            "description": "Event not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "EventSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 501
          },
          "title": {
            "type": "string",
            "example": "Sao Joao Festival"
          },
          "category": {
            "type": "string",
            "example": "Traditional Festival"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "example": "2026-06-24T10:00:00Z"
          },
          "venue_name": {
            "type": "string",
            "example": "Various locations in North Goa"
          }
        }
      },
      "EventDetail": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/EventSummary"
          },
          {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "example": "The feast of St. John the Baptist... "
              },
              "end_time": {
                "type": "string",
                "format": "date-time",
                "example": "2026-06-24T18:00:00Z"
              },
              "ticket_price": {
                "type": "number",
                "format": "float",
                "example": 0.0
              },
              "booking_url": {
                "type": "string",
                "format": "uri",
                "nullable": true,
                "example": "https://tickets.example.com/event/502"
              }
            }
          }
        ]
      }
    }
  }
}